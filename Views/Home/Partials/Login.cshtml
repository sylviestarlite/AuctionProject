@model CBT.Models.LogUser
<h1>Login</h1>
<br>
<form class="form-horizontal" role="form" method="post" asp-controller="Home" asp-action="Login">
    <div class="form-group">
        <label asp-for="LogUsername" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="LogUsername">
            <span asp-validation-for="LogUsername"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LogPW" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="LogPW">
            <span asp-validation-for="LogPW"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
            <label>
            <input type="checkbox"> Remember me
            </label>
        </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Sign in</button>
        </div>
    </div>
</form>