@model CBT.Models.NewUser
<h1>Register</h1>
<br>
<form class="form-horizontal" role="form" method="post" asp-controller="Home" asp-action="Register">
    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="FirstName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="FirstName">
            <span asp-validation-for="FirstName"></span>
        </div>  
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="LastName"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="LastName">
            <span asp-validation-for="LastName"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="Username"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Username">
            <span asp-validation-for="Username"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="PW"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="PW">
            <span asp-validation-for="PW"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" asp-for="CPW"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="CPW">
            <span asp-validation-for="CPW"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
</form>